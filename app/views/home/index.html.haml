%h1 Test
%div
	- @years.each do |y|
		%a{ onclick: "changeDate();", class: "btn button button1 year-button #{(y == @current_year) ? 'active' : ''}" , "year-number": "#{y}", remote: true }
			= y
%div
	- @months.each do |m|
		%a{ onclick: "changeDate();", class: "btn button button1 month-button #{(m[:number] == @current_month) ? 'active' : ''}", "month-number": "#{m[:number]}", remote: true }
			= m[:name]
%br
.container-fluid
	%table.table.table-bordered.table-responsive#sadhana-table
		%thead
			%tr
				%th
					Day
				%th
					Count
				%th
					Wake up Time
				%th
					Down Time
				%th
					Books reading
				%th
					Lectures Listening
		%tbody
			- for i in 1..days_in_month(@current_year.to_i,@current_month.to_i) do
				%tr
					%th.cell{ scope: "row" }
						= i
					%td
						%input.form-control.cell.number{ id: "round-count-day-#{i}", type: "number", min: "0", max: "256" }
					%td
						%input.form-control.cell.time{ id: "uptime-day-#{i}" }
					%td
						%input.form-control.cell.time{ id: "downtime-day-#{i}" }

